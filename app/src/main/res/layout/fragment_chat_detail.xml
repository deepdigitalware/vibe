<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="#121212"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:cardCornerRadius="18dp"
            android:layout_marginStart="4dp">
            <ImageView
                android:id="@+id/ivHeaderAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                android:background="#333333"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/tvHeaderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvHeaderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:singleLine="true"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnVideoCallHeader"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_video_call"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/btnBlock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_block"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/layoutInput">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/layoutBlocked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1E1E1E"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bannerContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This user has been blocked"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUnblock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unblock"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/primaryColor"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#1E1E1E"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@id/bannerContainer">

        <ImageButton
            android:id="@+id/btnEmoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_emoji"
            app:tint="#AAAAAA" />

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_rounded_bg"
            android:hint="Type a message..."
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textCursorDrawable="@null"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:minHeight="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="4dp"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences"/>

        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_gallery"
            app:tint="#AAAAAA" 
            android:layout_marginBottom="0dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageButton
                android:id="@+id/btnMic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_mic"
                app:tint="#AAAAAA" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_send"
                app:tint="@color/primaryColor"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewSmart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:adSize="SMART_BANNER"
            app:adUnitId="@string/admob_banner_id" 
            android:visibility="gone"/>
            
        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:adSize="LARGE_BANNER"
            app:adUnitId="@string/admob_banner_id" 
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>